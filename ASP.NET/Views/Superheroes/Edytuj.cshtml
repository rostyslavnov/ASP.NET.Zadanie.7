@model ASP.NET.Models.Superhero

@{
    ViewData["Title"] = "Edytuj Superbohatera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj Superbohatera</h1>

<form asp-action="Edytuj" method="post">
    <div class="form-group">
        <label asp-for="superhero_name"></label>
        <input asp-for="superhero_name" class="form-control" />
        <span asp-validation-for="superhero_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="full_name"></label>
        <input asp-for="full_name" class="form-control" />
        <span asp-validation-for="full_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="weight_kg"></label>
        <input asp-for="weight_kg" class="form-control" />
        <span asp-validation-for="weight_kg" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="height_cm"></label>
        <input asp-for="height_cm" class="form-control" />
        <span asp-validation-for="height_cm" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Lista" class="btn btn-secondary">Anuluj</a>
</form>